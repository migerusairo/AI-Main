MDScreen:
    name:'Profile-screen'

    MDFloatLayout:
        MDIconButton:
            icon: "chevron-left"
            pos_hint: {'center_y': 0.95}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "Setting-screen"

        MDTextButton:
            text: "Back"
            font_name: "fonts/PoppinsEL.otf"
            font_size: "15sp"
            pos_hint: {"center_x": .15, "center_y": .95}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "Setting-screen"

        MDLabel:
            text: "User Profile"
            font_name: "fonts/Poppins.otf"
            font_size: "18sp"
            halign: "center"
            pos_hint: {"center_y": .95}

        Image:
            source: "assets/TCUlogo.jpg"
            size_hint: 0.4, 0.4
            pos_hint: {'center_x': 0.5,'center_y': 0.80}

        MDBoxLayout:
            orientation:'vertical'
            MDBoxLayout:
                size_hint_y:.5

                MDFloatLayout:
                    MDLabel:
                        text: "Name"
                        font_name: "fonts/OpenSans-Bold.ttf"
                        font_size: "13sp"
                        pos_hint: {"center_x": .55,"center_y": .65}

                    MDIcon:
                        icon: "account"
                        pos_hint: {"center_x": .17,"center_y": .61}

                    MDLabel:
                        text: "Student ID"
                        font_name: "fonts/OpenSans-Bold.ttf"
                        font_size: "13sp"
                        pos_hint: {"center_x": .55,"center_y": .55}

                    MDIcon:
                        icon: "card-account-details"
                        pos_hint: {"center_x": .17,"center_y": .51}

                    MDLabel:
                        text: "Year & Course"
                        font_name: "fonts/OpenSans-Bold.ttf"
                        font_size: "13sp"
                        pos_hint: {"center_x": .55, "center_y": .45}

                    MDIcon:
                        icon: "card-text"
                        pos_hint: {"center_x": .17,"center_y": .41}

                    MDLabel:
                        text: "Section"
                        font_name: "fonts/OpenSans-Bold.ttf"
                        font_size: "13sp"
                        pos_hint: {"center_x": .55, "center_y": .35}

                    MDIcon:
                        icon: "script"
                        pos_hint: {"center_x": .17,"center_y": .31}

                    MDLabel:
                        text: "Email"
                        font_name: "fonts/OpenSans-Bold.ttf"
                        font_size: "13sp"
                        pos_hint: {"center_x": .55, "center_y": .25}

                    MDIcon:
                        icon: "email"
                        pos_hint: {"center_x": .17,"center_y": .21}
